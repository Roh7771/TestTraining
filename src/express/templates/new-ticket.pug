extends layout.pug

block content
  main.page-content
    section.ticket-form
      .ticket-form__wrapper
        h1.ticket-form__title Новая публикация
        .ticket-form__tile
          form.ticket-form__form.form(action='/offers/add', method='post', enctype='multipart/form-data', autocomplete='off')
            .ticket-form__avatar-container.js-preview-container
              .ticket-form__avatar.js-preview
              .ticket-form__field-avatar
                input#avatar.visually-hidden.js-file-field(type='file', name='picture')
                label(for='avatar')
                  span.ticket-form__text-upload Загрузить фото…
                  span.ticket-form__text-another Загрузить другое фото…
            .ticket-form__content
              .ticket-form__row
                .form__field
                  input#ticket-name.js-field(type='text', name='title', required='', value=prevOfferData ? prevOfferData.title : '')
                  label(for='ticket-name') Название
                  span Обязательное поле
              .ticket-form__row
                .form__field
                  textarea#comment-field.js-field(name='description', cols='30', rows='10', maxlength='400', minlength='50')
                    | #{prevOfferData ? prevOfferData.description : ''}
                  label(for='comment-field') Описание
                  span Обязательное поле
              .ticket-form__row
                select#category-field.form__select.js-multiple-select(name='category', data-label='Выбрать категорию публикации', multiple='')
                  each category in categories
                    option(value=`${category}`, selected=prevOfferData ? prevOfferData.category.includes(category) : false) #{category}
              .ticket-form__row
                .form__field.form__field--price
                  input#price-field.js-field.js-price(type='number', name='sum', min='1', required='', value=prevOfferData ? prevOfferData.sum : '')
                  label(for='price-field') Цена
                  span Обязательное поле
                .form__switch.switch
                  .switch__item
                    input#buy-field.visually-hidden(type='radio', name='type', value='offer', checked=prevOfferData && prevOfferData.type === 'offer') 
                    label.switch__button(for='buy-field') Куплю
                  .switch__item
                    input#sell-field.visually-hidden(type='radio', name='type', value='sale', checked=prevOfferData && prevOfferData.type === 'sale')
                    label.switch__button(for='sell-field') Продам
            button.form__button.btn.btn--medium.js-button(type='submit', disabled='') Опубликовать
